@model IEnumerable<SPA_exams.Models.ExamResult>

    <div class="panel-heading">All exam results</div>
    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <thead>
                <tr><th>Semester number</th><th>Subject name</th><th>Mark</th><th></th></tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Semester</td>
                    <td>@item.Subject</td>
                    <td>@item.Mark</td>
                    <td>
                        @Html.ActionLink("Remove", "Remove",
                        new { id = item.Id },
                        new { @class = "btn btn-xs btn-primary" })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
